{
  "compilerOptions": {                      
    "target": "es6",                                
    "module": "commonjs",                           
    "outDir": "./build",                              
    "strict": true,                                 
    "moduleResolution": "node",              
    "esModuleInterop": true,                        
    "experimentalDecorators": true,              
    "emitDecoratorMetadata": true,               
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true        
  },
  "exclude": [
    "src/**/*.spec.ts"
  ],
  "include": [
    "src"
  ]
}
